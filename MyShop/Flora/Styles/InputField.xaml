<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    
    <Style x:Key="InputFieldStyle" TargetType="telerik:DataFormDataField">
        <Setter Property="FontFamily" Value="/Flora;component/Fonts/#Poppins" />
        <Setter Property="Width" Value="800" />
        <Setter Property="Height" Value="65" />
        <Setter Property="telerik:StyleManager.Theme" Value="Fluent" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <Style x:Key="ComboBoxStyle" TargetType="telerik:DataFormComboBoxField">
        <Setter Property="FontFamily" Value="/Flora;component/Fonts/#Poppins" />
        <Setter Property="Width" Value="800" />
        <Setter Property="Height" Value="55" />
        <Setter Property="telerik:StyleManager.Theme" Value="Fluent" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>
    
    <Style x:Key="ComboBoxStyle2" TargetType="ComboBox">
        <Setter Property="FontFamily" Value="/Flora;component/Fonts/#Poppins" />
        <Setter Property="FontStyle" Value="Normal" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

</ResourceDictionary>